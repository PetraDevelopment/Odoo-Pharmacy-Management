<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_custom_fields_in_product" model="ir.ui.view">
        <field name="name">view.custom.fields.in.product</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='general_information']/group/group[@name='group_general']" position="inside">
                <field name="medcine_shape_id"/>
                <field name="effective_material_ids" widget="many2many_tags"/>
            </xpath>                
                        
        </field>
    </record>

</odoo>
